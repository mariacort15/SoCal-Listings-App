<% layout('layouts/layout') %>

<section class="properties-section">
  <h2 class="page-title">Available Properties</h2>

  <% if (properties.length === 0) { %>
    <p>No properties available yet.</p>
  <% } else { %>
    <div class="property-grid">
      <% properties.forEach(property => { %>
        <div class="property-card">
          <img 
            src="<%= property.image || '/images/default-property.jpg' %>" 
            alt="<%= property.title %>" 
            class="property-img"
          />

          <div class="property-info">
            <h3><%= property.title %></h3>
            <p><%= property.city %>, <%= property.state || 'CA' %></p>
            <p class="price">$<%= property.price.toLocaleString() %></p>
            <p><%= property.bedrooms %> Beds â€¢ <%= property.bathrooms %> Baths</p>

            <a href="/properties/<%= property._id %>" class="btn btn-info">View Details</a>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</section>

<style>
  .properties-section {
    width: 90%;
    margin: 2rem auto;
    max-width: 1200px;
  }
  .property-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }
  .property-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 6px rgba(0,0,0,0.1);
  }
  .property-img {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }
  .property-info {
    padding: 1rem;
  }
  .price {
    color: #0077cc;
    font-weight: bold;
  }
  .btn {
    display: inline-block;
    margin-top: 0.5rem;
    background-color: #003366;
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    text-decoration: none;
  }
  .btn:hover {
    opacity: 0.9;
  }
</style>