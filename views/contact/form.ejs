<%- include('../partials/_navbar') %>

<section class="contact-owner">
  <h2>
    Contact
    <%= owner && owner.fullName ? owner.fullName : "the Property Owner" %>
  </h2>

  <% if (property) { %>
    <p class="contact-property">
      Regarding:
      <strong><%= property.title %></strong>
      â€” <%= property.city %>
    </p>
  <% } %>

  <form
    action="/contact-owner/<%= owner._id %>?propertyId=<%= property ? property._id : '' %>"
    method="POST"
    class="contact-form"
  >
    <div class="form-group">
      <label for="senderName">Your Name</label>
      <input
        type="text"
        id="senderName"
        name="senderName"
        placeholder="Your Name"
        required
      />
    </div>

    <div class="form-group">
      <label for="senderEmail">Your Email</label>
      <input
        type="email"
        id="senderEmail"
        name="senderEmail"
        placeholder="Your Email"
        required
      />
    </div>

    <div class="form-group">
      <label for="phone">Phone (optional)</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        placeholder="Phone (optional)"
      />
    </div>

    <div class="form-group">
      <label for="message">Message</label>
      <textarea
        id="message"
        name="message"
        placeholder="Tell us how we can help..."
        rows="5"
        required
      ></textarea>
    </div>

    <button type="submit" class="btn primary-btn">Send Message</button>
  </form>
</section>

<%- include('../partials/_footer') %>