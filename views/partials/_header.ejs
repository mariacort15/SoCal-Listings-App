
<header class="main-header">
    <div class="container">
      <a href="/" class="logo">
        <h1>üè† SoCal Listings</h1>
      </a>
  
      <nav class="nav">
        <ul>
          <% if (user) { %>
            <li>Welcome, <%= user.fullName %>!</li>
            <% if (user.role === 'Owner' || user.role === 'Admin') { %>
              <li><a href="/properties/new">Add Property</a></li>
            <% } %>
            <li><a href="/users/my-listings">My Listings</a></li>
            <li><a href="/auth/profile">Profile</a></li>
